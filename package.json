{
  "name": "skinsys-multiscale",
  "version": "1.0.0",
  "description": "Multiscale Skin Model - A scientifically accurate distributed simulation system for skin physiology across molecular, cellular, tissue, and organ scales",
  "private": true,
  "workspaces": [
    "cerebral-triad/*",
    "somatic-triad/*", 
    "autonomic-triad/*",
    "cognitive-core/*",
    "cognitive-core/ml-core/*",
    "integration-hub/api-gateway"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "start:dev": "npm run start:dev --workspaces",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EchoCog/skinsys.git"
  },
  "keywords": [
    "multiscale-modeling",
    "skin-physiology",
    "computational-biology",
    "biomedical-simulation",
    "distributed-systems",
    "scientific-computing"
  ],
  "author": "EchoCog",
  "license": "AGPL-3.0"
}